<div class="container">
<div class="hero-wrapper">
  <hero class="bike">
    <div class="Header-img" style="background-image: url(<%= asset_path 'bikebrick.jpg' %>)">
      <div class="teaser">
				<h1>Contact Us</h1>

				<%= flash[:notice] %>

				<%= form_tag("/static_pages/thank_you") do %>
				<div class="row">
				  <div class="col-md-6">
				    <div class="form-group">
				      <%= label_tag :name %>
				      <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
				    </div>      
				    <div class="form-group">
				      <%= label_tag :email, "Email Address" %>
				      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
				    </div>
				    <div class="form-group">
				      <%= label_tag :message %>
				      <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
				    </div>      
				  </div>
				</div>
				<%= submit_tag "Send", :class => 'btn btn-primary' %>   
				<% end %>
      </div>
    </div>
  </hero>
</div>
</div>
